doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title Simply Life Pre - Order
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', integrity='sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7', crossorigin='anonymous')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css', integrity='sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r', crossorigin='anonymous')
    link(href='/menu_style.css', rel='stylesheet')
  body
    h1#header1
      a(href='#')#header1 Menu
    .container
      nav#menuNav.navbar.navbar-default.row
        .container-fluid
          ul.nav.navbar-nav
            li#pastries.col-xs-2.menuTabs
              a(href='#') Pastries
            li#salad.col-xs-2.menuTabs
              a(href='#') Salad
            li#sandwiches.col-xs-2.menuTabs
              a(href='#') Sandwiches
            li#soup.col-xs-2.menuTabs
              a(href='#') Soup
            li#snacks.col-xs-2.menuTabs
              a(href='#') Snacks
            li#beverages.col-xs-2.menuTabs
              a(href='#') Beverages
      #secondRow.row
        h4#header2 Menu Items
        .col-xs-12.inventoryBox
      #thirdRow.row
        .col-xs-12.toBasket
          h2 Basket, submit button, direct to Checkout

    h1#header3 Checkout
    .container
      #fourthRow.row
        h5#header4 Your Items
        .col-xs-12.basketBox
        .col-xs-12.totalBox
          h2#totalPrice 0
      #fifthRow.row
        .col-xs-12.pickTime
          h1 time
          .dropdown
            button#menu1.btn.btn-primary.center-block.dropdown-toggle(type='button', data-toggle='dropdown')
              | Pick A Time
            ul.dropdown-menu(role='menu', aria-labelledby='menu1')
      #sixthRow.row
        .col-xs-12.pickPayment
          h2 Pick a Payment Option
      #seventhRow.row
        #toOrderSummary.col-xs-12
          h2 Done, submit button, direct to Order Summary, if basket is empty prevent click. if time is within time frame prevent click.

    h1#header4 Order Summary
    .container
      #eighthRow.row
        .col-xs-12.orderTicket
          #qrCode.col-xs-6
            img(src='qrcode.png')
          .col-xs-6
            h1 Pick me up at this time:
            #pickUpTimeCode.col-xs-12
      #ninthRow.row
        .col-xs-12.Summary
          h2 Display your order
      .row
        .col-xs-12.toMainMenu
          h2 Done, submit button, direct to Main menu

    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js', integrity='sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS', crossorigin='anonymous')
    script(src='/ajax.js')
    script(src='/script.js')

