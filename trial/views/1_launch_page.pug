extends base/layout

block main
  .container
    .row
      .col-sm-8.col-sm-offset-2
        h1 Launch Page
    .row
      .col-sm-8.col-sm-offset-2

        form(action='/login', method='get')
          button.btn.btn-warning.btn-lg(type='submit') Log In
        hr
        form(action='/signup', method='get')
          button.btn.btn-warning.btn-lg(type='submit') Sign Up
        hr
    .row
        .col-sm-8.col-sm-offset-2
          a(href='/auth/facebook')
            span.fa.fa-facebook
        hr
    .row
        .col-sm-8.col-sm-offset-2
          a(href='/auth/twitter')
            span.fa.fa-twitter