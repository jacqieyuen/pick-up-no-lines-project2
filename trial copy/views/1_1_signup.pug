extends base/layout

block main
  .container
    .row
      h1#SignUpHeader Signup
    .row
      #signUpBox
        if (message.length > 0)
          .alert.alert-danger #{message}
        form(action='/signup', method='post')
          //- .form-group
          //-   label First Name
          //-   input.form-control(type='text', name='firstname')
          //- .form-group
          //-   label Last Name
          //-   input.form-control(type='text', name='lastname')
          .form-group
            label Email
            input.form-control(type='text', name='email')
          .form-group
            label Password
            input.form-control(type='password', name='password')
          .centerButtons
            a.btn.btn-lg.opacityButton(href='/', role='button') Back
            button#signUpButton.btn.btn-lg.opacityButton(type='submit') Signup
        hr