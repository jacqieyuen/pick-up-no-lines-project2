extends base/layout

block main

    #menuContainer.container
      .row
        .col-xs-7
          h1
            a(href='#')#header1 Menu
        .col-xs-5
          a#profileButton.btn.btn-info(href='/profile', role='button') Profile
      nav#menuNav.navbar.navbar-default.row
        .container-fluid
          ul.nav.navbar-nav
            li#pastries.col-xs-2.menuTabs
              a(href='#').a1 Pastries
            li#salad.col-xs-2.menuTabs
              a(href='#').a1 Salad
            li#sandwiches.col-xs-2.menuTabs
              a(href='#').a1 Sandwiches
            li#soup.col-xs-2.menuTabs
              a(href='#').a1 Soup
            li#snacks.col-xs-2.menuTabs
              a(href='#').a1 Snacks
            li#beverages.col-xs-2.menuTabs
              a(href='#').a1 Beverages
      #secondRow.row
        .col-xs-12.inventoryBox
      #thirdRow.row
        .col-xs-12.toBasket
          button#toCheckoutButton.btn.btn-primary.center-block(type='button', data-toggle='dropdown')
            |To Checkout

    #checkoutContainer.container
      .row
        .col-xs-7
          h1#header3 Checkout
        .col-xs-5
          a#profileButton.btn.btn-info(href='/profile', role='button') Profile
      #fourthRow.row
        h5#header4 Your Items
        .col-xs-12.basketBox
        .col-xs-12.totalBox
          h2#totalPrice 0
      #fifthRow.row
        .col-xs-12.pickTime
          .dropdown
            button#menu1.btn.btn-primary.center-block.dropdown-toggle(type='button', data-toggle='dropdown')
              | Pick A Time
            ul#dropDown1.dropdown-menu(role='menu', aria-labelledby='menu1')
      #sixthRow.row
        .col-xs-12.pickPayment
          .dropdown
            button#menu2.btn.btn-primary.center-block.dropdown-toggle(type='button', data-toggle='dropdown')
              | Pick A Payment
            ul#dropDown2.dropdown-menu(role='menu', aria-labelledby='menu1')
      #seventhRow.row
        #toOrder.col-xs-12
          button#toOrderSummaryButton.btn.btn-primary.center-block(type='button', data-toggle='dropdown')
            |Done


    #orderSumContainer.container
      h1#header4 Order Summary
      #eighthRow.row
        .col-xs-12.orderTicket
          #qrCode.col-xs-6
            img(src='lib/img/qrcode.png')
          .col-xs-6
            h1 Pick me up at this time:
            #pickUpTimeCode.col-xs-12
      #ninthRow.row
        .col-xs-12.Summary
          h2 Your Order Summary
      .row
        .col-xs-12.toMainMenu
          button#finishButton.btn.btn-primary.center-block(type='button', data-toggle='dropdown')
            |Finish